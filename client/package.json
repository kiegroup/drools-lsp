{
  "name": "vscode-extension-drl-editor",
  "displayName": "DRL Editor",
  "description": "Edit DRL (Drools Rule Language) files",
  "publisher": "kie-group",
  "version": "1.0.0-alpha",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/drools-lsp.git"
  },
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:drools"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.vscode-extension-drl-editor",
        "title": "DRL"
      }
    ],
    "languages": [
      {
        "id": "drools",
        "aliases": [
          "Drools Rule Language",
          "DRL"
        ],
        "extensions": [
          ".drl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "drools",
        "scopeName": "source.drools",
        "path": "./syntaxes/drl.tmLanguage"
      }
    ],
    "javaExtensions": [
      "./lib/drools-lsp-server-jar-with-dependencies.jar"
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "pack:dev": "mkdir ./dist; vsce package --githubBranch main --no-dependencies -o ./dist/"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "@vscode/vsce": "^2.19.0",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "vscode-languageclient": "5.1.1"
  }
}
